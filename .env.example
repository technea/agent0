# OpenClaw Agent Configuration
# Copy this file to .env and fill in your actual values

# ===========================
# BLOCKCHAIN CONFIGURATION
# ===========================

# Base Sepolia RPC URL
# Get from: https://chainlist.org/ or https://www.alchemy.com/ or https://infura.io/
RPC_URL=https://sepolia.base.org

# Your wallet private key (KEEP THIS SECRET!)
# Export from MetaMask or create a new wallet for the agent
# Make sure this wallet has Base Sepolia ETH for gas fees
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ===========================
# FARCASTER CONFIGURATION
# ===========================

# Farcaster API Key from Neynar
# Get from: https://neynar.com/
FARCASTER_API_KEY=your_neynar_api_key_here

# Farcaster Signer UUID
# Create a signer at: https://docs.neynar.com/
FARCASTER_SIGNER_UUID=your_signer_uuid_here

# ===========================
# X (TWITTER) CONFIGURATION
# ===========================

# X API credentials from developer portal
# Get from: https://developer.twitter.com/
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_SECRET=your_x_access_secret_here

# ===========================
# AGENT CONFIGURATION
# ===========================

# Deployment interval in minutes (default: 20)
DEPLOYMENT_INTERVAL=20
